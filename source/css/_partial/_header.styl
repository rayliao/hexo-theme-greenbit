header
  min-height 60px
  padding 20px 0
  display flex
  justify-content space-between

  .logo
    display flex
    align-items center
    &:hover
      opacity 0.8
    .logo-wrap
      display flex
      flex-direction column
      justify-content center
      .title
        font-size 24px
        line-height 1
      .sub
        font-style italic

  .nav
    display flex
    align-items center
    gap 15px

  .nav-list-item
    a
      font-size 18px
