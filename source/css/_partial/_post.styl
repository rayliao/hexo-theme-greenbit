.post
  padding-top 1em
  .post-tags
    margin-top 20px
    display flex
    gap 10px
    a
      background-color var(--primary-color)
      color var(--on-primary-color)
      border-radius 2px
      padding 1px 5px
      &:hover 
        background-color var(--primary-hover-color)

.post-block
  .post-title
    margin 0
    margin-bottom 5px
    font-size 22px
  .post-date
    margin 0
    margin-bottom 20px
    color var(--light-color)
    font-size 13px
  .post-title-link
    color var(--primary-color)
    &:hover
      background-color var(--primary-color)
      color var(--on-primary-color)
  .post-info
    color var(--light-color)
    margin-bottom 15px

    span
      margin-left 0.5rem

    a.post-from
      margin-left 0.5rem
      padding 3px 6px
      border-radius 5px
      font-size 12px
      color white
      background-color #E36B6B

  .post-tag
    margin-left 5px
    color var(--light-color)
    &:hover
      color var(--primary-color)
      
.post-content
  h2, h3, h4, h5, h6
    position relative
    margin 1em 0

  h2, h3
    font-size 18px
  
  h3, h5
    font-weight normal

  h4, h5
    font-size 16px

  h6
    font-size 14px
    font-weight bold

  a
    color var(--primary-color)
    word-break break-all
    &:hover
      text-decoration underline

  blockquote
    margin 10px 0
    padding-left 10px
    border-left 2px solid var(--primary-color)

  img
    display block
    max-width 100%
    margin 1em auto

  table
    width 100%
    margin 10px 0
    border-spacing 0
    th
      text-align left
      padding 6px
      background-color #d4d4d4
      font-weight normal
    tbody
      tr:hover
        background-color #e2e2e2  
    td
      text-align left
      padding 6px
      min-height 30px
      border-bottom 1px solid #e2e2e2
      
  code
    color: #f81ce5;
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    white-space: pre-wrap;
    font-size 13px
    &:before
      content: '\`';
    &:after
      content: '\`';
  pre
    padding 10px
    border-radius 6px
    background-color var(--pre-background)
    code
      &:before, &:after
        content ''

  .highlight
    position relative
    margin 1em 0
    line-height 1.1em
    overflow-x auto

    table, td, tr
      width 100%
      border-collapse collapse
      padding 0
      margin 0
      border none
    table tbody tr:hover
      background none
    .gutter
      display none

    .code pre
      padding 1.2em 1.4em
      line-height 1.5em
      margin 0

      .line
        width auto
        height 18px
  .tip
    position relative
    margin 2em 0
    padding 12px 24px 12px 30px
    border-left 4px solid #f66
    border-top-right-radius 2px
    border-bottom-right-radius 2px
    background-color #f8f8f8

    br
      display none

  .tip:before
    position absolute
    top 14px
    left -12px
    content '!'
    width 20px
    height 20px
    border-radius '100%'
    color #fff
    font-size 14px
    line-height 20px
    font-weight bold
    text-align center
    background-color #f66
    font-family 'Dosis', 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif

#mask
  position fixed
  overflow scroll
  width 100%
  height 100%
  padding 1em 0
  background-color rgba(0, 0, 0, 0.5)
  z-index 10
  #mask-image
    max-width 95%

.code-base
  position absolute
  top 0
  right 0
  color #ccc
  text-align right
  font-size 0.75em
  padding 5px 10px 0
  line-height 15px
  height 15px
  font-weight 600

code-signs($keys)
  for $key in $keys
    .highlight.#{$key} .code:after
      content to-upper-case($key)
      @extend .code-base

$signs = 'html', 'js', 'bash', 'css', 'scss', 'diff', 'java', 'xml', 'python', 'json', 'swift', 'ruby', 'perl', 'php', 'c', 'java', 'cpp', 'ts'
code-signs($signs)

.highlight.cpp .code:after
  content 'C++'

pre
  color var(--pre-color) 
  .constant, .function .keyword
    color #0092db

  .attribute, .keyword
    color #e96900

  .literal, .number
    color #ae81ff

  .change, .clojure .built_in, .flow, .lisp .title, .nginx .title, .tag, .tag .title, .tex .special, .winutils
    color #2973b7

  .regexp, .symbol, .symbol .string, .value
    color #42b983

  .title
    color #83B917

  .addition, .apache .cbracket, .apache .tag, .attr_selector, .built_in, .django .filter .argument, .django .template_tag, .django .variable, .envvar, .haskell .type, .javadoc, .preprocessor, .prompt, .pseudo, .ruby .class .parent, .smalltalk .array, .smalltalk .class, .smalltalk .localvars, .sql .aggregate, .stream, .string, .subst, .tag .value, .tex .command
    color #42b983

  .apache .sqbracket, .comment, .doctype, .java .annotation, .pi, .python .decorator, .shebang, .template_comment, .tex .formula
    color var(--pre-color) 

  .deletion
    color #BA4545

  .coffeescript .javascript, .javascript .xml, .tex .formula, .xml .cdata, .xml .css, .xml .javascript, .xml .vbscript
    opacity 0.5

@media screen and (max-width 700px)
    .post-content
      h2, h3, h4, h5, h6
        max-width 300px
        left 15px