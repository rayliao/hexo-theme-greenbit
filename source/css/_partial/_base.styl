html
  --background-color: #f3f3f2
  --on-background-color: #0d0d0c
  --primary-color: #849c16
  --on-primary-color: #fff
  --primary-hover-color: #71880a
  --light-color: #747474
  --border-color: #dbdbdb
  --pre-color: #444;

html, body
  width: 100%
  height: 100%

body
  margin: 0
  color: var(--on-background-color)
  font-size: 14px
  line-height: 1.6
  background-color: var(--background-color)
  font-family "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;

ul.nav, ul.post-list
  margin: 0
  padding: 0
  list-style-type: none

ul
  margin: 1rem 0

a, a:active
  color: var(--on-background-color)
  text-decoration: none

a.nav-list-link.active, a.nav-list-link:hover
  border-bottom: 2px solid var(--primary-color)

hr
  border: 0

iframe, video
  max-width: 100%
  margin: 1rem auto
  display: block

.gt-container .gt-header-textarea
  color: #242826

main.container
  margin 0 0 2em 0

.wrap
  width 700px
  margin 0 auto
