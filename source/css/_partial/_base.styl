html
  --wrap-width: 700px
  --header-background: rgba(243, 243, 242, 0.7)
  --background-color: rgb(243, 243, 242)
  --on-background-color: #0d0d0c
  --primary-color: #849c16
  --on-primary-color: #fff
  --primary-hover-color: #71880a
  --light-color: #747474
  --border-color: #dbdbdb
  --pre-background: #fff
  --pre-color: #444

html, body
  width 100%
  height 100%
  box-sizing border-box

body
  margin: 0
  color var(--on-background-color)
  font-size 14px
  line-height 1.6
  background-color: var(--background-color)
  padding-top 78px
  font-family "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;

ul.nav, ul.post-list
  margin: 0
  padding: 0
  list-style-type: none

ul
  margin: 1rem 0

a, a:active
  color: var(--on-background-color)
  text-decoration: none

a.nav-list-link.active, a.nav-list-link:hover
  border-bottom: 2px solid var(--primary-color)

hr
  border: 0

iframe, video
  max-width: 100%
  margin: 1rem auto
  display: block

.main
  transition opacity 0.6s

.gt-container .gt-header-textarea
  color: #242826

.container
  margin 0

.wrap
  width var(--wrap-width)
  margin 0 auto

@media screen and (max-width 700px) 
  .wrap
    width 100%
  .container
    padding 0 10px