<!DOCTYPE html>
<html lang="<%- config.language %>">
  <head>
    <%- partial('_partial/head') %>
  </head>
  <body>
    <%- partial('_partial/nav') %>
    <header>
      <div class="wrap">
        <a href="<%- url_for() %>" class="logo">
          <% if(theme.logo.enabled) { %> 
            <img src="<%= url_for(theme.logo.url) %>" width="<%= theme.logo.width %>" height="<%= theme.logo.height %>" /> 
            <% } %> 
            <div class="logo-wrap">
              <span class="title">
                <%- config.title %> 
              </span>
              <span class="sub">
                <%- config.subtitle %> 
              </span>
            </div>
        </a>
      </div>
    </header>
    <div class="wrap">
      <div class="container">
        <%- body %>
      </div>
      <footer>
        <%- partial('_partial/paginator') %>
        <div class="copyright">
          <% 
            var greenbitURL = "https://github.com/rayliao/hexo-theme-greenbit";
            var currentDate = new Date();
            var year = currentDate.getFullYear();
            year = year == theme.startyear ? year : theme.startyear + ' - ' + year; %>
          <p>
            Â© <%= year %> powered by <a href="https://hexo.io/" target="_blank">hexo</a> and
            <a href="<%- greenbitURL %>" target="_blank">hexo-theme-greenbit</a>.
          </p>
        </div>
      </footer>
    </div>
    <script> 
      (function(){
        let isOpen = false;
        const menu = document.getElementById('menu')
        const handle = menu.querySelector('button.menu-handle')
        handle.addEventListener('click', function() {
          menu.classList.toggle('menu-anim')
          setTimeout(function() { menu.classList.toggle('menu-open') }, 250)
          isOpen = !isOpen
        })
      })()
    </script>
  </body>
</html>
